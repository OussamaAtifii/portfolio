---
import ArrowUpRightIcon from "@icons/ArrowUpRightIcon.astro"

interface Props {
  title: string
  company: string
  companyLink: string
  date: string
  description: string[]
}

const { title, company, companyLink, date, description } = Astro.props
---

<li class="ms-4">
  <div
    class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-white bg-dodger-blue-600"
  >
  </div>
  <div class="space-y-4">
    <div class="col-span-2 flex flex-col gap-4">
      <time class="text-sm leading-none text-gray-400 mt-1.5">{date}</time>
      <div>
        <h3
          class="text-3xl font-semibold text-dodger-blue-700 text-nowrap sm:text-wrap leading-none"
        >
          {title}
        </h3>
        <a
          href={companyLink}
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium text-gray-400 hover:text-white flex items-center group transition duration-300 hover:cursor-pointer"
        >
          {company}
          <ArrowUpRightIcon
            class="size-4 group-hover:translate-x-[2px] transition"
          />
        </a>
      </div>
    </div>
    <div class="col-span-3">
      <ul class="list-disc ml-4 text-base font-normal text-gray-400 space-y-2">
        {description.map((item) => <li>{item}</li>)}
      </ul>
    </div>
  </div>
</li>
