---
import { SKILLS } from "@constants"
import GitMergeIcon from "@icons/GitMergeIcon.astro"
---

<section>
  <div class="flex justify-between items-center mb-7">
    <div class="flex items-center gap-x-2">
      <GitMergeIcon class="size-10" />
      <h2 class="font-medium text-2xl">Skills</h2>
    </div>
  </div>
  <div class="grid sm:grid-cols-1 gap-12">
    <div class="flex flex-col">
      <div class="flex flex-col gap-6">
        {
          SKILLS.map((skill) => (
            <div class="flex">
              <p class="w-1/5">{skill.name}</p>
              <div class="flex gap-2 w-4/5 flex-wrap">
                {skill.items.map((item) => (
                  <button class="border border-gray-300 px-2 py-1 rounded-md text-sm cursor-default">
                    {item}
                  </button>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
