---
const { href, icon: Icon, text } = Astro.props;
---

<a
  href={href}
  class="inline-flex items-center gap-2 rounded-lg border border-gray-700 bg-gray-900 px-4 py-2 text-sm font-medium text-white transition-colors duration-200 hover:bg-gray-800 hover:text-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500 hover:cursor-pointer"
  target="_blank"
  rel="noopener noreferrer"
>
  <Icon class="size-5" />
  {text ? <span>{text}</span> : null}
</a>
