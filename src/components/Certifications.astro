---
import Certificate from "@icons/Certificate.astro"
import { CERTIFICATIONS } from "@constants"
import Container from "./Container.astro"
---

<Container title="Certifications" icon={Certificate}>
  <div class="grid sm:grid-cols-1 gap-8">
    {
      CERTIFICATIONS.map(({ link, tag, name, description, date }) => (
        <a
          class="border-2 border-gray-600 rounded-lg p-5 flex flex-col sm:flex-row items-center gap-5 transition-all duration-300 bg-[#151519] hover:border-gray-300"
          href={link}
          target="_blank"
        >
          <tag.icon class="size-20" />
          <div>
            <h3 class="text-lg font-medium">{name}</h3>
            <p class=" text-gray-400">{description}</p>
            <p class="text-sm text-gray-400 mt-1">{date}</p>
          </div>
        </a>
      ))
    }
  </div>
</Container>
